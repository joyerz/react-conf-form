{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": false, /* Allow javascript files to be compiled. */
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./src/Form/@types"
    ],
    "types": [
      "react",
      "react-dom",
      "node"
    ],
  }
}